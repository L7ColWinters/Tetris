<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/labs.brian.brianstetris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    
	<labs.brian.customviews.CustomFontTextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/highscorename"
	    foo:font="visitor1.ttf"
	    android:textSize="30sp"
	    android:layout_alignParentLeft="true"
	    android:layout_margin="10dp"/>
	
	<labs.brian.customviews.CustomFontTextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/highscorescore"
	    foo:font="visitor1.ttf"
	    android:textSize="30sp"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@id/highscorename"
	    android:layout_margin="10dp"/>
    
</RelativeLayout>